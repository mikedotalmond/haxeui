<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="Haxe UI Toolkit" package="haxe.ui.toolkit" version="1.0.0" company="" />
	
	<!-- output -->
	<app main="Main" file="buttons" path="./bin" />
	
	<window background="#FFFFFF" fps="60" />
	<window width="800" height="600" unless="mobile" />
	
	<!-- classpath, haxe libs -->
	<source path="../../src/" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="hscript" />	
	
	<assets path="assets" exclude="*.xml|*.css" if="html5" />
	<assets path="assets" unless="html5" />

	<assets path="../../assets/fonts" rename="fonts" />
	
	
	<haxeflag name="-resource" value="assets/buttons.xml@assets/buttons.xml" />
	
</project>