<?xml version="1.0" encoding="utf-8" ?>
<tabview id="myTabs" width="100%" height="100%">
	<style>
		#myTabs #tabButton {
			icon: "img/slinky_tiny.jpg";
		}
	
		Button.tab2 {
			iconPosition: "right";
		}
		
		#tabButton.tab3 {
			iconPosition: "top";
		}
		
		.tab4 {
			iconPosition: "bottom";
		}
	</style>
	
	<vbox text="Tab 1" id="tab1">
		<button text="Button 1"/>
	</vbox>
	<vbox text="Tab 2" id="tab2">
		<button text="Button 2"/>
	</vbox>
	<vbox text="Tab 3" id="tab3">
		<button text="Button 3"/>
	</vbox>
	<vbox text="Tab 4" id="tab4">
		<button text="Button 4"/>
	</vbox>
</tabview>

