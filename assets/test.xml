<?xml version="1.0" encoding="utf-8" ?>
<hbox>
	<ui:accordion width="300" height="400" id="theAccordion" selectedIndex="1">
		<ui:vbox text="Panel 1">
			<ui:button text="Button 1" />
		</ui:vbox>
		<ui:vbox text="Image Panel" id="nopadding">
			<ui:scrollview width="100%" height="100%">
				<ui:image resource="assets/slinky.jpg" />
			</ui:scrollview>
		</ui:vbox>
		<ui:vbox text="List Panel" id="nopadding">
			<ui:listview width="100%" height="100%">
				<data:array>
					Item 1, Item 2, Item 3, Item 4, Item 5, Item 6, Item 7, Item 8, Item 9, Item 10
				</data:array>
			</ui:listview>
		</ui:vbox>
		<ui:vbox text="Panel 4">
			<ui:button text="Button 4" />
		</ui:vbox>
	</ui:accordion>
	
	<ui:scrollview width="300" height="100%" xmlns:ui="haxeui::ui" xmlns:style="haxeui::style" xmlns:data="haxeui::data">
		
		<ui:vbox width="100%" height="500" style="spacing:0;padding:0" >
			
			<ui:expandablepanel width="100%" text="Panel 1" style="spacingY:5">
				<ui:button text="Button 1" />
				<ui:button text="Button 2" />
				<ui:button text="Button 3" />
				<ui:button text="Button 4" />
			</ui:expandablepanel>
			
			<ui:expandablepanel width="100%" text="Image Panel" style="spacingY:5">
				<ui:scrollview width="100%" height="300">
					<ui:image resource="assets/slinky.jpg" />
				</ui:scrollview>
			</ui:expandablepanel>
			
			<ui:expandablepanel width="100%" text="List Panel" startExpanded="false">
				<ui:listview width="100%" height="300">
					<data:array>
						Item 1, Item 2, Item 3, Item 4, Item 5, Item 6, Item 7, Item 8, Item 9, Item 10
					</data:array>
				</ui:listview>
			</ui:expandablepanel>
			
			<ui:expandablepanel width="100%" text="Panel 4" startExpanded="false" >
				<ui:button text="Button 5" />
			</ui:expandablepanel>
			
		</ui:vbox>
		
	</ui:scrollview>	
</hbox>	
